<h1>Books</h1>

<table>

<thead>
 <tr>
  <th>Title</th> <th>　Body</th> <th colspan="3">
 </tr>
</thead>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td>
     <span><%= book.title %></span>
    </td>
    <td><%= book.body %></td>
    <td>　<%= link_to "Show", book_path(book.id) %>　</td>
    <td>　<%= link_to "Edit", edit_book_path(book.id) %>　</td>
    <td>　<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %>　</td>　</td>
   </tr>
 </tbody>

 <% end %>
 </table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 </br>
 </br>
 <%= f.submit 'Create Book' %>

<% end %>
